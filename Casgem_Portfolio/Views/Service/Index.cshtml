@model List<Casgem_Portfolio.Models.TblServices>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>Hizmet Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>   
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServicesId</td>
            <td>@item.ServiceTitle</td>
            <td><a href="/Service/DeleteService/@item.ServicesId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServicesId" class="btn btn-warning">Güncelle</a></td>
            
        </tr>
    }
</table>
<a href="/Service/AddService" class="btn btn-success">Yeni Hizmet Girişi</a>
