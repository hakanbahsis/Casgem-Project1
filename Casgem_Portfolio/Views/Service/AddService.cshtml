@model Casgem_Portfolio.Models.TblServices
@{
    ViewBag.Title = "AddService";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>Yeni Hizmet Ekleme</h2>
<form method="post">
    <label>Hizmet Başlığı</label>
    <input type="text" class="form-control" name="ServiceTitle" />
    <br />
    <label>Hizmet İkonu</label>
    <input type="text" class="form-control" name="Icon" />
    <br />
    <label>Hizmet Numarası</label>
    <input type="text" class="form-control" name="ServiceNumber" />
    <br />
    <label>Hizmet İçeriği</label>
    <input type="text" class="form-control" name="ServiceContent" />
    <br />
    <button class="btn btn-success">Kaydet</button>
</form>

